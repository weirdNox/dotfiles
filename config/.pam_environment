HOME_LOCAL_DIR      DEFAULT=@{HOME}/.local

XDG_CACHE_HOME      DEFAULT=@{HOME}/.cache

XDG_CONFIG_DIRS     DEFAULT=/etc/xdg
XDG_CONFIG_HOME     DEFAULT=@{HOME}/.config

XDG_BIN_HOME        DEFAULT=${HOME_LOCAL_DIR}/bin
PATH                DEFAULT=${XDG_BIN_HOME}:/usr/local/sbin:/usr/local/bin:/usr/bin

XDG_DATA_DIRS       DEFAULT=/usr/local/share/:/usr/share/
XDG_DATA_HOME       DEFAULT=${HOME_LOCAL_DIR}/share

XDG_LIB_HOME        DEFAULT=${HOME_LOCAL_DIR}/lib

EDITOR              DEFAULT=${XDG_BIN_HOME}/editor
VISUAL              DEFAULT=${EDITOR}
ALTERNATE_EDITOR    DEFAULT=""

DICPATH             DEFAULT=${XDG_DATA_HOME}/dicts

# Syncthing - Don't create default folder
STNODEFAULTFOLDER   DEFAULT=yes
