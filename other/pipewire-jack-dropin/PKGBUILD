# -*- mode: sh -*-
pkgname=nox-pipewire-jack-dropin
pkgrel=1
pkgver=1
pkgdesc="Use PipeWire as drop-in replacement for PulseAudio/JACK"
arch=(any)
source=(pipewire-jack.conf)
sha256sums=('SKIP')

depends=("pipewire-jack")
conflicts=(jack2 jack2-dbus)
provides=(
    jack
    libjack.so=0-64
    libjacknet.so=0-64
    libjackserver.so=0-64
)

package()
{
    install -Dm644 "$srcdir/pipewire-jack.conf" -t "$pkgdir/etc/ld.so.conf.d"
}
